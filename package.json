{
  "name": "@yelbook/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev:front": "NX_DAEMON=false nx dev front",
    "dev:api": "NX_DAEMON=false nx serve api",
    "dev": "NX_DAEMON=false nx run-many --target=serve --all --parallel",
    "build": "nx run-many --target=build --all",
    "start:front": "nx serve-static front",
    "start:api": "node --env-file=apps/api/.env apps/api/dist/main.js",
    "start": "npm run start:front & npm run start:api",
    "lint": "nx run-many --target=lint --all",
    "typecheck": "nx run-many --target=typecheck --all",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "nx run-many --target=test --all",
    "clean": "nx reset && rm -rf dist .nx",
    "update:nx": "npx nx migrate latest && npm install && npx nx migrate --run-migrations"
  },
  "private": true,
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "express": "^4.21.2",
    "next": "~15.2.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@nx/esbuild": "22.0.3",
    "@nx/eslint": "22.0.3",
    "@nx/eslint-plugin": "22.0.3",
    "@nx/js": "22.0.3",
    "@nx/next": "22.0.3",
    "@nx/node": "^22.0.3",
    "@nx/workspace": "22.0.3",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/express": "^4.17.21",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "10.4.13",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-next": "^15.2.4",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "22.0.3",
    "prettier": "^2.6.2",
    "tailwindcss": "^4.1.17",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "workspaces": [
    "apps/*",
    "libs/contract",
    "libs/config"
  ]
}
